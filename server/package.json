{
  "name": "awake-connect-backend",
  "version": "1.0.0",
  "description": "Backend for AWAKE Connect student sponsorship platform",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node src/seed.js",
    "seed": "node ./prisma/seed.cjs",
    "db:export": "cd ../database && bash export_database.sh",
    "db:export:win": "cd ../database && export_database.bat",
    "db:import": "cd ../database && bash import_database.sh",
    "db:import:win": "cd ../database && import_database.bat",
    "db:reset": "cd ../database && bash reset_database.sh",
    "db:reset:win": "cd ../database && powershell -ExecutionPolicy Bypass -File reset_database.ps1",
    "db:reset:keep-admin": "cd ../database && powershell -ExecutionPolicy Bypass -File reset_database.ps1 -KeepAdmin",
    "db:backup": "npm run db:export",
    "db:restore": "npm run db:import",
    "db:fresh": "npm run db:reset && npm run seed",
    "db:migrate:fresh": "prisma migrate reset --force && npm run seed",
    "import:universities": "node import-universities.js",
    "import:validate": "node validate-import.js validate",
    "import:test": "node validate-import.js test",
    "import:backup": "node validate-import.js backup",
    "import:status": "node validate-import.js status"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "fluent-ffmpeg": "^2.1.3",
    "formdata-node": "^6.0.3",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.6",
    "sharp": "^0.34.4",
    "stripe": "^14.21.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1"
  },
  "prisma": {
    "seed": "node ./prisma/seed.cjs"
  }
}
