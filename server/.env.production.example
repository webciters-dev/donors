# Production Environment Variables
# Create this as server/.env.production

# Database
DATABASE_URL="postgresql://awake_user:YOUR_PASSWORD@localhost:5432/awake_production"

# Server
NODE_ENV=production
PORT=3001

# Frontend URLs
FRONTEND_URL=https://awake.webciters.dev
FRONTEND_URLS=https://awake.webciters.dev,https://www.awake.webciters.dev

# JWT Secret (generate a strong secret)
JWT_SECRET=your_super_secure_jwt_secret_here_at_least_64_chars_long_random_string

# Email Configuration (Professional Domain)
EMAIL_HOST=mail.aircrew.nl
EMAIL_PORT=587
EMAIL_USER=noreply@aircrew.nl
EMAIL_PASS=your-aircrew-email-password
EMAIL_FROM=AWAKE Connect <noreply@aircrew.nl>

# Stripe (if using payments)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/home/awake-app/awake/server/uploads