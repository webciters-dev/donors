{
  "apps": [{
    "name": "awake-backend",
    "script": "./server/src/server.js",
    "cwd": "/home/awake-app/awake",
    "env": {
      "NODE_ENV": "production",
      "PORT": 3001
    },
    "env_file": "./server/.env.production",
    "instances": 2,
    "exec_mode": "cluster",
    "watch": false,
    "max_memory_restart": "1G",
    "error_file": "./logs/err.log",
    "out_file": "./logs/out.log",
    "log_file": "./logs/combined.log",
    "time": true,
    "restart_delay": 4000,
    "max_restarts": 10
  }]
}